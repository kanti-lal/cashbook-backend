{
  "name": "cashbook-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "mkdir -p dist && cp -r src/* dist/ && cp package.json dist/ && cp .env dist/",
    "build:windows": "if not exist dist mkdir dist && xcopy /s /y src\\* dist\\ && copy package.json dist\\ && copy .env dist\\",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "puppeteer": "^23.11.1",
    "puppeteer-core": "^21.5.0",
    "uuid": "^9.0.1",
    "@sparticuz/chromium": "^119.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "nodemon": "^3.0.2"
  }
}
